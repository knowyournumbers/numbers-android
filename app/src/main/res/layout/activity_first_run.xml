<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context="com.knowyour.numbers.FirstRun">

    <TextView
        android:id="@+id/first_run_welcome_text"
        android:text="Welcome to Know Your Numbers."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/first_run_subtext"
        android:text="Save, Empowered Kids."
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_run_welcome_text"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/is_this_your_number"
        android:text="First things first is this your number?."
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_marginTop="60dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_run_subtext"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/first_run_phone_number"
        android:text="(321) 555-1212"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/is_this_your_number"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_run_phone_number">

        <Button
            style="@android:style/Widget.Holo.Button.Small"
            android:text="Yes"
            android:id="@android:id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            style="@android:style/Widget.Holo.Button.Small"
            android:text="No"
            android:id="@android:id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>



</RelativeLayout>
