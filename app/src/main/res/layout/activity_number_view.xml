<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Number_View">

    <fragment
        android:id="@+id/area_code_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:name="com.knowyour.number.numbers.AreaCode"
        tools:layout="@layout/fragment_area_code" />

    <fragment
        android:id="@+id/area_number_part1"
        android:layout_below="@+id/area_code_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:name="com.knowyour.number.numbers.NumberPart1"
        tools:layout="@layout/fragment_number_part1" />

    <fragment
        android:id="@+id/area_number_part2"
        android:layout_below="@+id/area_number_part1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:name="com.knowyour.number.numbers.NumberPart2"
        tools:layout="@layout/fragment_number_part2" />
</RelativeLayout>
